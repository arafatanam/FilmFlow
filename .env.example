# FilmFlow Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/filmflow
# For production (Heroku/Railway):
# DATABASE_URL=postgresql://user:pass@host:5432/dbname?sslmode=require

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Service (SendGrid)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_USER=apikey
EMAIL_FROM=callsheets@yourproduction.com

# Twilio SMS Service
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+15551234567

# Weather API (OpenWeatherMap)
OPENWEATHER_API_KEY=your_openweathermap_api_key

# Sunrise-Sunset API (usually no key needed, but keep for reference)
SUNRISE_SUNSET_API=https://api.sunrise-sunset.org/json

# AWS S3 (for file uploads - certifications, etc.)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=filmflow-uploads
AWS_REGION=us-east-1

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3001
# For production:
# FRONTEND_URL=https://filmflow.yourproduction.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-change-this
COOKIE_MAX_AGE=86400000

# Logging
LOG_LEVEL=info
# Options: error, warn, info, debug

# Feature Flags
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEATHER_INTEGRATION=true
ENABLE_PDF_GENERATION=true

# Cron Jobs (for automatic reminders)
ENABLE_AUTO_REMINDERS=true
REMINDER_CRON_SCHEDULE=0 */6 * * *

# File Upload Limits
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png

# Production Security
# Only enable in production
FORCE_HTTPS=false
ENABLE_HELMET=true
ENABLE_CORS_WHITELIST=false
